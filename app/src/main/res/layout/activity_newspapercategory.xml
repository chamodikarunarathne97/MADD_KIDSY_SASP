<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aa"
    android:orientation="vertical"
    tools:context=".newspapercategory">


    <TextView
        android:id="@+id/newspapers"
        android:layout_width="400dp"
        android:layout_height="75dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="650dp"
        android:text="Choose A Category"
        android:textColor="@color/dark"
        android:textSize="40dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textStyle="bold">
    </TextView>

    <Button
        android:id="@+id/gradebtn15"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="-600dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="950dp"
        android:textColor="@color/white"
        android:background="@drawable/custom_button"
        android:fontFamily="sans-serif-black"
        android:text="@string/gradebtn15"
        android:textSize="40dp"
        android:textStyle="bold">
    </Button>

    <Button
        android:id="@+id/gradebtn611"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="-900dp"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="-50dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/gradebtn611"
        android:textColor="@color/white"
        android:background="@drawable/custom_button"
        android:textSize="40dp"
        android:textStyle="bold">
    </Button>

    <Button
        android:id="@+id/gradebtn1213"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="85dp"
        android:textColor="@color/white"
        android:background="@drawable/custom_button"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="930dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/gradebtn1213"
        android:textSize="40dp"
        android:textStyle="bold">
    </Button>

    <Button
        android:id="@+id/articlesbtn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="-900dp"
        android:layout_marginRight="40dp"
        android:textColor="@color/white"
        android:background="@drawable/custom_button"
        android:layout_marginBottom="1000dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/articlesbtn"
        android:textSize="40dp"
        android:textStyle="bold">
    </Button>

    <Button
        android:id="@+id/admin"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="-920dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="900dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/admin"
        android:textSize="20dp"
        android:textStyle="bold">

    </Button>

</LinearLayout>

